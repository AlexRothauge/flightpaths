{
  "name": "@flight-paths/backend",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "^18.12.0"
  },
  "scripts": {
    "main": "node dist",
    "main:dev": "ts-node src",
    "build": "tsc",
    "type-check": "tsc --noEmit --composite false",
    "test": "cross-env DB_NAME=test mocha --require ts-node/register src/**/*.test.ts",
    "test:ci": "yarn build && nyc yarn test --reporter html --reporter mocha-junit-reporter --reporter-options mochaFile=mocha.junit.xml --require source-map-support/register",
    "lint": "eslint src --ext .js,.cjs,.mjs,.ts,.cts,.mts --ignore-path ../../.gitignore",
    "lint:fix": "yarn lint --fix",
    "lint:check": "yarn lint",
    "format": "prettier . '!tsconfig.json' --ignore-path ../../.gitignore",
    "format:write": "yarn format --write",
    "format:check": "yarn format --check",
    "generate:api": "yarn tsoa spec-and-routes"
  },
  "dependencies": {
    "@tsoa/runtime": "^4.1.3",
    "canvas": "^2.10.2",
    "csvtojson": "^2.0.10",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongodb": "^4.12.0",
    "swagger-ui-express": "^4.6.0",
    "tsoa": "^4.1.3",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.3",
    "@types/express": "^4.17.14",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@types/rewire": "^2.5.28",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.0",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.1.0",
    "mocha-junit-reporter": "^2.1.1",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "rewire": "^6.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
